import java.util.Scanner;


public class SG83 {

	public static void main(String[] args) {
		
		SpaceGame myGame = new SpaceGame("my game", 500, 500);
		
		Shape spaceShip = new Shape(0, 250, 250, 50, 50);
		
		myGame.addShape(spaceShip);
		
		int pointX = (int)(Math.random() * 250); 
		int pointY = (int)(Math.random() * 250);
		
		Point base = new Point(pointX, pointY);
		
		myGame.addShape(base);
		
		boolean end = false;    
		while(!end){  
			int randirec = (int)(Math.random()* 4)+1;
				if(randirec == 1){
					myGame.moveUp(spaceShip, 5, 1);
				}else if (randirec == 2) {
					myGame.moveDown(spaceShip, 5, 1);
				}else if (randirec == 3) {
					myGame.moveRight(spaceShip, 5, 1);
				}else{
					myGame.moveLeft(spaceShip, 5, 1);
				}
				
				spaceShip.isPointInShape(500, 500);
		}
 
	}
}