import java.util.Scanner;


public class SG83 {

	public static void main(String[] args) {
		
		SpaceGame myGame = new SpaceGame("my game", 500, 500);
		
		int ssX = 250, ssY = 250;
		Shape spaceShip = new Shape(0, ssX, ssY, 50, 50);
		
		myGame.addShape(spaceShip);
		
		int pointX = (int)(Math.random() * 250); 
		int pointY = (int)(Math.random() * 250);
		
		Point base = new Point(pointX, pointY);
		
		myGame.addShape(base);
		
		do {
			do {
				if(ssY != pointY){
						myGame.moveUp(spaceShip, 50, 5);
						break;
				}else if (ssY != pointY) {
					myGame.moveDown(spaceShip, 50, 5);
					break;
				}
			}while(ssY < 500 || ssY > -500);
			do {
				if (ssX > pointX) {
					myGame.moveRight(spaceShip, 50, 5);
					break;
				}else if(ssX > pointX){
					myGame.moveLeft(spaceShip, 50, 5);
					break;
				}
			}while((ssX > 500 || ssX < -500) );		
		}while(spaceShip != base);
	}
}